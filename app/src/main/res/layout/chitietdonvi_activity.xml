<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_donvichitiet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/user"/>

    <EditText
        android:id="@+id/edt_iddonvichitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="ID" />

    <TextView
        android:id="@+id/edt_namedonvichitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tên đơn vị"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/edt_sdtdonvichitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Số điện thoại"
        android:textStyle="italic"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/edt_emaildonvichitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Email"
        android:textSize="18sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/edt_diachidonvichitiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dia chi"
        android:textSize="18sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_suadonvi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="50dp"
        android:text="Sua" />

    <Button
        android:id="@+id/btn_xoadonvi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:text="Xoa" />

</LinearLayout>
